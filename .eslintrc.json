{
  "root": true,
  "ignorePatterns": [
    ".git",
    "node_modules",
    ".DS_Store",
    "dist",
    "dist-ssr",
    "*.local",
    "yarn.lock",
    "*.log"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "vueFeatures": {
      "filter": false,
      "interpolationAsNonHTML": true
    }
  },
  "extends": "plugin:vue/vue3-recommended",
  "rules": {
    "no-restricted-globals": [
      "error",
      "window",
      "document",
      "module",
      "require"
    ],
    "vue/comment-directive": ["error", {
      "reportUnusedDisableDirectives": true
    }]
  }
}