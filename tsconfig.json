{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,

    "strict": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],

    "baseUrl": "./",
    "paths": { "@/*": ["src/*"] },
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
    "newLine": "lf"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "exclude": ["node_modules"]
}